@model lab_3.Models.UserViewModel

<h2>Изменение пользователя</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary(false, "Иправьте ошибки в заполнении:")
    </div>
}

<form asp-action="Edit" method="post">
    <div class="form-group">
        @* // для автоматического связывания данных*@
        <label asp-for="FirstName" class="mt-2">Имя пользователя</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="mt-2">Фамилия пользователя</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="mt-2">Телефон пользователя</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Role" class="mt-2">Роль пользователя</label>
        <!-- выпадающий список для выбора роли -->
        @Html.DropDownListFor(
                 model => model.Role,
                 new SelectList(ViewData["Roles"] as List<string>),
                 new { @class = "form-control" })
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Изменить</button>
</form>
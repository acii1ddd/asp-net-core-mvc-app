@model IEnumerable<lab_3.Models.PassengerViewModel>

@{
    ViewData["Title"] = "Passengers";
    Layout = "_Layout";
}

<div class="container">
    <h1>Пассажиры</h1>
    <div class="mt-3">
        <a class="btn btn-info" asp-controller="Passenger" asp-action="Create">Добавить пассажира</a>
    </div>

    <!-- поле ввода для поиска -->
    <div id="searchSection" class="mt-3">
        <div class="form-inline">
            <input type="text" id="searchName" class="form-control" placeholder="Введите имя пассажира" />
            <button id="searchButton" class="btn btn-primary mt-2 mb-2">Искать</button>
        </div>
    </div>

    <div class="table-container mt-50">
        <table class="table table-light" id="passengerTable">
            <thead>
                <tr>
                    <th>Имя пассажира</th>
                    <th>Фамилия пассажира</th>
                    <th>Телефон</th>
                    <th>Паспортные данные</th>
                    <th>Действие</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var passenger in Model) {
                    <tr>
                        <td>@passenger.FirstName</td>
                        <td>@passenger.SecondName</td>
                        <td>@passenger.Phone</td>
                        <td>@passenger.PassportData</td>
                        <td>
                            <a class="btn btn-secondary" asp-controller="Passenger" asp-action="Delete" asp-route-id="@passenger.Id">Удалить</a>
                            <a class="btn btn-secondary" asp-controller="Passenger" asp-action="Edit" asp-route-id="@passenger.Id">Редактировать</a> @* название параметра (id), значение (passenger.Id) *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/searchPassengers.js"></script>
}

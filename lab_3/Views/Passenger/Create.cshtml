@* тип данных, с которым будет работать представление *@
@model lab_3.Models.PassengerViewModel 

<h2>Добавление пассажира</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        @* // для автоматического связывания данных*@   
        <label asp-for="FirstName" class="mt-2">Имя</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SecondName" class="mt-2">Фамилия</label>
        <input asp-for="SecondName" class="form-control" />
        <span asp-validation-for="SecondName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="mt-2">Телефон</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PassportData" class="mt-2">Паспортные данные</label>
        <input asp-for="PassportData" class="form-control" />
        <span asp-validation-for="PassportData" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Сохранить</button>
</form>